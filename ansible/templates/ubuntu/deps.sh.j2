# dependencies common to both options
apt-get update

apt-get -y install unzip

apt-get -y install \
    python-pip

apt-get -y install nginx

apt-get -y install redis-server


# install the latest version
pip install --upgrade pip
pip install --upgrade virtualenv

{% if doc %}
